{
  "app-id": "net.mediaarea.MediaInfo",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.30",
  "branch": "stable",
  "sdk": "org.gnome.Sdk",
  "command": "mediainfo-gui",
  "rename-desktop-file": "mediainfo-gui.desktop",
  "rename-appdata-file": "mediainfo-gui.metainfo.xml",
  "rename-icon": "mediainfo",
  "finish-args": [
    "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
    "--talk-name=ca.desrt.dconf",
    "--filesystem=xdg-run/dconf",
    "--filesystem=host:ro",
    "--socket=wayland",
    "--socket=x11",
    "--share=network",
    "--share=ipc"
  ],
  "build-options": {
    "cflags": "-O2 -g",
    "cxxflags": "-O2 -g"
  },
  "modules": [
    {
      "name": "wxwidgets",
      "cleanup": [ "/bin", "/include", "/share", "/lib/wx" ],
      "rm-configure": true,
      "config-opts": [ "--enable-shared", "--enable-unicode", "--with-gtk=3" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/wxWidgets/wxWidgets/releases/download/v3.1.1/wxWidgets-3.1.1.tar.bz2",
          "sha256": "c925dfe17e8f8b09eb7ea9bfdcfcc13696a3e14e92750effd839f5e10726159e"
        },
        {
          "type": "script",
          "commands": [
            "cp -p /usr/share/automake-*/config.{sub,guess} .",
            "autoconf -f -B build/autoconf_prepend-include"
          ]
        }
      ]
    },
    {
      "name": "libzen",
      "subdir": "Project/GNU/Library",
      "config-opts": [ "--enable-shared", "--disable-static" ],
      "cleanup": [ "/bin", "/include", "/lib/pkgconfig", "/lib/*.la" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://mediaarea.net/download/source/libzen/0.4.37/libzen_0.4.37.tar.xz",
          "sha256": "401c34d93056a95f8392982f856d1371c5de6aec373d84dcbb356e1f473d0452"
        }
      ]
    },
    {
      "name": "libmediainfo",
      "subdir": "Project/GNU/Library",
      "config-opts": [ "--enable-shared", "--disable-static", "--with-libcurl" ],
      "cleanup": [ "/bin", "/include", "/lib/pkgconfig", "/lib/*.la" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://mediaarea.net/download/source/libmediainfo/18.08.1/libmediainfo_18.08.1.tar.xz",
          "sha256": "7a237f35257fadf2796c02161e87330dedca74d0fb914259be3d8d88d2cbcbc0"
        }
      ]
    },
    {
      "name": "mediainfo-gui",
      "subdir": "Project/GNU/GUI",
      "cleanup": [ "share/pixmaps", "/share/apps", "/share/kde4", "/share/kservices5" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://mediaarea.net/download/source/mediainfo/18.08.1/mediainfo_18.08.1.tar.xz",
          "sha256": "49773d0b13cb13818a7727b59f0124186fd96b3ffd22a6402ccf082c3f6b0267"
        }
      ]
    }
  ]
}
