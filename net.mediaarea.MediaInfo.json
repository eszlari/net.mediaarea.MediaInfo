{
  "app-id": "net.mediaarea.MediaInfo",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.26",
  "branch": "stable",
  "sdk": "org.gnome.Sdk",
  "command": "mediainfo-gui",
  "rename-desktop-file": "mediainfo-gui.desktop",
  "rename-appdata-file": "mediainfo-gui.metainfo.xml",
  "rename-icon": "mediainfo",
  "finish-args": [
    "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
    "--talk-name=ca.desrt.dconf",
    "--filesystem=xdg-run/dconf",
    "--filesystem=host:ro",
    "--socket=wayland",
    "--socket=x11",
    "--share=network",
    "--share=ipc"
  ],
  "build-options": {
    "cflags": "-O2 -g",
    "cxxflags": "-O2 -g"
  },
  "modules": [
    {
      "name": "wxwidgets",
      "cleanup": [ "/bin", "/include", "/share", "/lib/wx" ],
      "rm-configure": true,
      "config-opts": [ "--enable-shared", "--disable-static", "--enable-unicode", "--with-gtk=3" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/wxWidgets/wxWidgets/releases/download/v3.0.3.1/wxWidgets-3.0.3.1.tar.bz2",
          "sha256": "3164ad6bc5f61c48d2185b39065ddbe44283eb834a5f62beb13f1d0923e366e4"
        },
        {
          "type": "script",
          "commands": [
            "cp -p /usr/share/automake-*/config.{sub,guess} .",
            "autoconf -f -B build/autoconf_prepend-include"
          ]
        }
      ]
    },
    {
      "name": "libzen",
      "subdir": "Project/GNU/Library",
      "config-opts": [ "--enable-shared", "--disable-static" ],
      "cleanup": [ "/bin", "/include", "/lib/pkgconfig", "/lib/*.la" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://mediaarea.net/download/source/libzen/0.4.37/libzen_0.4.37.tar.xz",
          "sha256": "401c34d93056a95f8392982f856d1371c5de6aec373d84dcbb356e1f473d0452"
        }
      ]
    },
    {
      "name": "libmediainfo",
      "subdir": "Project/GNU/Library",
      "config-opts": [ "--enable-shared", "--disable-static", "--with-libcurl" ],
      "cleanup": [ "/bin", "/include", "/lib/pkgconfig", "/lib/*.la" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://mediaarea.net/download/source/libmediainfo/18.03/libmediainfo_18.03.tar.xz",
          "sha256": "fb451233bea6bdf188ef76f237e02e907ef632b85a166e44d60e559d66c49fb4"
        }
      ]
    },
    {
      "name": "mediainfo-gui",
      "subdir": "Project/GNU/GUI",
      "cleanup": [ "share/pixmaps", "/share/apps", "/share/kde4", "/share/kservices5" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://mediaarea.net/download/source/mediainfo/18.03/mediainfo_18.03.tar.xz",
          "sha256": "c1fa4ef50c99081350d0efb00e6c1fb2e196872a321cd2e1f27f516371d83d9c"
        }
      ]
    }
  ]
}
