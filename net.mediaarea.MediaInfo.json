{
  "app-id": "net.mediaarea.MediaInfo",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "18.08",
  "branch": "stable",
  "sdk": "org.freedesktop.Sdk",
  "command": "mediainfo-gui",
  "rename-desktop-file": "mediainfo-gui.desktop",
  "rename-appdata-file": "mediainfo-gui.metainfo.xml",
  "rename-icon": "mediainfo",
  "finish-args": [
    "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
    "--talk-name=ca.desrt.dconf",
    "--filesystem=xdg-run/dconf",
    "--filesystem=host:ro",
    "--socket=wayland",
    "--socket=x11",
    "--share=network",
    "--share=ipc"
  ],
  "modules": [
    {
      "name": "wxwidgets",
      "cleanup": [ "/bin", "/include", "/share", "/lib/wx" ],
      "rm-configure": true,
      "config-opts": [ "--enable-shared", "--enable-unicode", "--with-gtk=3" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/wxWidgets/wxWidgets/releases/download/v3.1.2/wxWidgets-3.1.2.tar.bz2",
          "sha256": "4cb8d23d70f9261debf7d6cfeca667fc0a7d2b6565adb8f1c484f9b674f1f27a"
        },
        {
          "type": "script",
          "commands": [
            "cp -p /usr/share/automake-*/config.{sub,guess} .",
            "autoconf -f -B build/autoconf_prepend-include"
          ]
        }
      ]
    },
    {
      "name": "libzen",
      "subdir": "Project/GNU/Library",
      "config-opts": [ "--enable-shared", "--disable-static" ],
      "cleanup": [ "/bin", "/include", "/lib/pkgconfig", "/lib/*.la" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://mediaarea.net/download/source/libzen/0.4.37/libzen_0.4.37.tar.xz",
          "sha256": "38c0a68b715b55d6685d2759eecda040adf37bd066955d79a5d01f91977bd9a0"
        }
      ]
    },
    {
      "name": "libmediainfo",
      "subdir": "Project/GNU/Library",
      "config-opts": [ "--enable-shared", "--disable-static", "--with-libcurl" ],
      "cleanup": [ "/bin", "/include", "/lib/pkgconfig", "/lib/*.la" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://mediaarea.net/download/source/libmediainfo/19.04/libmediainfo_19.04.tar.xz",
          "sha256": "8275f3031d63cea7b227437ac4222bc9709f434e233e5f32a533fcf405dd22fb"
        }
      ]
    },
    {
      "name": "mediainfo-gui",
      "subdir": "Project/GNU/GUI",
      "cleanup": [ "share/pixmaps", "/share/apps", "/share/kde4", "/share/kservices5" ],
      "sources": [
        {
          "type": "archive",
          "url": "https://mediaarea.net/download/source/mediainfo/19.04/mediainfo_19.04.tar.xz",
          "sha256": "65aec410ec00a9c83f4a3763a875eb3fe93c105bfb511c6aced79efe86788a87"
        }
      ]
    }
  ]
}
